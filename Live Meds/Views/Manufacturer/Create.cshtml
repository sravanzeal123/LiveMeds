@model LiveMedsEntity.Manufacturer

@{
    ViewBag.Title = "Create";
}

@{
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Manufacturer</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-lg-6">
                <input type="text" name="ManufactureName" required class="form-control input-lg" placeholder="Manufacture Name" />
                @Html.ValidationMessageFor(model => model.ManufactureName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-6">
                <input type="submit" value="Create" class="btn btn-info btn-lg" />
            </div>
        </div>
    </div>
}


<div>
    <br />
    <br />
    <br />
    <br />
    <a id="back" class="btn btn-md btn-info" href="~/Manufacturer/Index"><span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span> Back</a>
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<style>
    .btn-info {
        background-color: #3399cc;
    }
</style>